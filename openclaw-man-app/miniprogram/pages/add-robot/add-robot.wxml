<view class="container">
  <view class="header">
    <view class="avatar-wrapper" bindtap="chooseAvatar">
      <image class="avatar" src="{{avatar || '/image/icon_API.png'}}" mode="aspectFill"></image>
      <view class="avatar-tip">点击更换头像</view>
    </view>
    <input class="name-input" placeholder="请输入机器人名称" placeholder-class="name-placeholder" bindinput="onNameInput" value="{{name}}" />
  </view>

  <view class="info-group">
    <view class="info-item column">
      <text class="label">描述</text>
      <textarea class="textarea" placeholder="请输入机器人描述" placeholder-class="desc-placeholder" bindinput="onDescInput" value="{{description}}" auto-height />
    </view>
  </view>

  <button class="save-btn" type="primary" bindtap="saveRobot">保存</button>
  
  <!-- Hidden canvas for image compression -->
  <canvas canvas-id="compressCanvas" style="width: 128px; height: 128px; position: absolute; left: -9999px; top: -9999px;"></canvas>
</view>
