/* pages/chat/chat.wxss */
.container {
  height: 100vh;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  padding: 0;
}

.chat-list {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
  overflow-y: auto;
  background-color: #ededed;
}

.chat-item {
  display: flex;
  margin-bottom: 30rpx;
  align-items: flex-start;
}

.chat-item-user {
  justify-content: flex-end;
}

.chat-item-robot {
  justify-content: flex-start;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  flex-shrink: 0;
}

.bubble {
  max-width: 60%;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  line-height: 1.5;
  position: relative;
  word-wrap: break-word;
}

.bubble-user {
  background-color: #95ec69;
  color: #000;
  margin-right: 20rpx;
}

.bubble-robot {
  background-color: #fff;
  color: #000;
  margin-left: 20rpx;
}

.msg-image {
  max-width: 100%;
  border-radius: 8rpx;
}

/* Footer Area */
.footer-area {
  background-color: #f7f7f7;
  border-top: 1rpx solid #dcdcdc;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  width: 100%;
  position: relative; /* For bottom positioning */
  /* transition removed as requested */
}

.footer-area.keyboard-open {
  padding-bottom: 0;
}

.input-area {
  display: flex;
  flex-direction: row;
  align-items: flex-end; /* Align bottom for auto-height */
  padding: 20rpx 20rpx; /* Symmetric padding */
  box-sizing: border-box;
  width: 100%;
}

.input-wrapper {
  flex: 1;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 18rpx 20rpx;
  min-height: 40rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}

.input-wrapper.disabled {
  background-color: #f5f5f5;
}

.input-textarea {
  width: 100%;
  font-size: 32rpx;
  color: #333;
  line-height: 40rpx;
  max-height: 200rpx;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.icon-container {
  height: 76rpx; /* Matches approximate height of input wrapper (40 + 18*2 = 76) */
  display: flex;
  align-items: center; /* Center vertically */
  margin-bottom: 0; /* Remove bottom margin to align center */
}

.icon-btn {
  width: 56rpx;
  height: 56rpx;
  flex-shrink: 0;
}

.input-placeholder {
  color: #999;
}

/* More Panel */
.more-panel {
  height: 250rpx;
  background-color: #f7f7f7;
  border-top: 1rpx solid #dcdcdc;
  display: flex;
  padding: 40rpx;
  box-sizing: border-box;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 60rpx;
}

.action-icon-box {
  width: 110rpx;
  height: 110rpx;
  background-color: #fff;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  border: 1rpx solid #eee;
}

.action-icon {
  width: 56rpx;
  height: 56rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666;
}
