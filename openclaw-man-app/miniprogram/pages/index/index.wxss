/* pages/index/index.wxss */
.container {
  padding: 0;
  background-color: #fff;
  min-height: 100vh;
  display: block;
}

.chat-list {
  width: 100%;
}

.chat-item-wrapper {
  border-bottom: 1rpx solid #f0f0f0;
  height: 140rpx;
  width: 100%;
  position: relative;
  overflow: hidden;
}

.item-movable-area {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.item-movable-view {
  width: calc(100% + 240rpx);
  height: 100%;
  background-color: #fff;
  z-index: 10;
  display: flex;
}

.chat-item-content {
  display: flex;
  padding: 24rpx 30rpx;
  background-color: #fff;
  width: 750rpx;
  height: 100%;
  box-sizing: border-box;
  flex-shrink: 0;
}

.chat-item-content:active {
  background-color: #f5f5f5;
}

.avatar-container {
  position: relative;
  margin-right: 24rpx;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 12rpx;
  background-color: #eee;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
}

.top-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.name {
  font-size: 34rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 10rpx;
}

.right-info {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.title-preview {
  font-size: 24rpx;
  color: #999;
  max-width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 16rpx;
}

.time {
  font-size: 24rpx;
  color: #b2b2b2;
}

.bottom-row {
  display: flex;
}

.message {
  font-size: 28rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* Slide Actions */
.slide-actions {
  height: 100%;
  display: flex;
  width: 240rpx;
  flex-shrink: 0;
}

.slide-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 100%;
  color: #fff;
  font-size: 32rpx;
}

.slide-btn.edit {
  background-color: #c0c0c0;
}

.slide-btn.delete {
  background-color: #fa5151;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-icon {
  width: 128rpx;
  height: 128rpx;
  opacity: 0.3;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
