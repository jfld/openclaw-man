/* pages/robot-detail/robot-detail.wxss */
.container {
  padding: 30rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
  display: block;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  padding: 40rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  background-color: #eee;
}

.name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.info-group {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 0 30rpx;
  margin-bottom: 40rpx;
}

.info-item {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  width: 160rpx;
  color: #666;
  font-size: 28rpx;
}

.value {
  flex: 1;
  color: #333;
  font-size: 28rpx;
  word-break: break-all;
}

.actions {
  margin-top: 60rpx;
}

.chat-btn {
  margin-bottom: 30rpx;
}

.edit-btn {
  margin-bottom: 30rpx;
  background-color: #f2f2f2;
  color: #07C160;
}

.delete-btn {
  background-color: #f2f2f2;
  color: #fa5151;
}
