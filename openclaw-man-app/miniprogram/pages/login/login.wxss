/* pages/login/login.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 60rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.header {
  margin-bottom: 80rpx;
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
}

.form-area {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.avatar-wrapper {
  padding: 0;
  width: 180rpx !important;
  height: 180rpx !important;
  border-radius: 50%;
  margin-bottom: 60rpx;
  background-color: transparent;
  position: relative;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background-color: #eee;
}

.edit-icon {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 50rpx;
  height: 50rpx;
  background-color: #07C160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid #fff;
}

.camera-icon {
  width: 30rpx;
  height: 30rpx;
}

.input-group {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #f7f7f7;
  border-radius: 12rpx;
}

.label {
  font-size: 32rpx;
  color: #333;
  margin-right: 30rpx;
  font-weight: 500;
}

.nickname-input {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  height: 50rpx;
}

.login-btn {
  width: 100% !important;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  font-size: 32rpx;
  border-radius: 45rpx;
  background-color: #07C160;
}
